<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/experiment_setup_aim"
        android:textSize="@dimen/control_textsize_large"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/control_margin_small"
        android:padding="@dimen/control_edittext_padding"
        android:text="@string/lorem_ipsum_text"
        android:textSize="@dimen/control_textsize_medium" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/experiment_setup"
        android:textSize="@dimen/exp_setup_textsize"
        android:gravity="center_horizontal"/>

</LinearLayout>